<div class="index-title"><h1>Open Jobs around you!</h1></div>

<div class="container">
  <div class="d-flex justify-content-between row">
    <% @jobs.each do |job| %>
        <div class="card" style="width: 18rem;">
        <%= link_to job_path(job) do %>
          <img class="card-img-top" src="https://www.spacefungame.com/wp-content/uploads/2022/02/Job.jpg" alt="Card image cap">
       <% end %>
          <div class="card-body">
            <p class="card-text"><%=job.job_title%></p>
            <p class="card-text"><%=job.job_description%></p>
            <p class="card-text"><%=job.start_date%></p>
            <p class="card-text"><%=job.end_date%></p>
            <p class="card-text"><%=job.remuneration%></p>
          </div>
        </div>
     <%end%>
  </div>
</div>
