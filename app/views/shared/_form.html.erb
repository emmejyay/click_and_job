<div class="background">
    <div class="container">
      <%= simple_form_for(@job) do |f| %>
        <div class="form-container">
          <img src="https://play-lh.googleusercontent.com/DBmnKeN_RYafeJg_p30pMeOmL0pagMlm6r3kIHNaFSdVIUAB5pimapbOTQ0Kja6DGMM" id="form_logo" class="rounded-circle shadow-4">
          <br>
            <div class="form-group">
              <%= f.input :job_title, :input_html => { :class => 'input_box' }, :label_html => { :class => 'form-label'} %>
              <%= f.input :job_description,:input_html => { :class => 'input_box' }, :label_html => { :class => 'form-label'} %>
            </div>
            <%# <div class="date-section-form" > %>
            <div class="row g-3" style="margin-bottom: 10px">
              <%# <div class="date-inputs"> %>
              <div class="col">
                <%= f.label :start_date, :label_html => { :class => 'form-label'} %>
                <%= f.text_field :start_date, :input_html => { :class => 'input_box' },
                  class: 'form-control input_box',
                  data: {
                    controller: "flatpickr",
                    flatpickr_alt_format: t("date.formats.long"),
                    flatpickr_date_format: "%d %B %Y %H:i",
                    flatpickr_min_date: Time.zone.now,
                    flatpickr_enable_time: true,
                } %>
              </div>
              <%# <div class="date-inputs"> %>
              <div class="col">
                <%= f.label :end_date, :label_html => { :class => 'form-label'} %>
                <%= f.text_field :end_date, :input_html => { :class => 'input_box' },
                  class: 'form-control input_box',
                  data: {
                    controller: "flatpickr",
                    flatpickr_alt_format: t("date.formats.long"),
                    flatpickr_date_format: "%d %B %Y %H:i",
                    flatpickr_min_date: Time.zone.now,
                    flatpickr_enable_time: true,
                  } %>
              </div>
            </div>
            <%= f.input :remuneration,label: 'Hourly pay' ,:input_html => { :class => 'input_box' }, :label_html => { :class => 'form-label'} %>
            <%= f.input :img_url, label: 'Image', :label_html => { :class => 'question-project form-label' }, :input_html => {:class => 'input_box'}  %>
            <%= f.input :location,
                    :label_html => { :class => 'form-label'},
                    input_html: { data: { geocoder_target: "location" },  :class => 'input_box' },
                    wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['pk.eyJ1IjoibWF4aWphcHMiLCJhIjoiY2w0M3cxa3R5MTdsbDNkcjJkMXZzbTZheSJ9.W7KeJ6pL9tCCRkgiNNIkXA'] }} %>
            <%= f.button :submit, class: "btn btn-primary", id: "form_button" %>
        </div>
      <% end %>
    </div>
</div>
