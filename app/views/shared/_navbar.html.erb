<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <a class="navbar-brand" href="/" style="color: #F4F4F4">
      <img src="https://play-lh.googleusercontent.com/DBmnKeN_RYafeJg_p30pMeOmL0pagMlm6r3kIHNaFSdVIUAB5pimapbOTQ0Kja6DGMM" class="rounded-circle shadow-4"/> Click & Job </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">

        <% if user_signed_in? %>
          <li><%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-ghost" %></li>
          <li><%= link_to "Jobs Available", jobs_path, class:"btn btn-ghost" %></li>
          <li><%= link_to "Dashboard", dashboard_path, class:"btn btn-ghost" %></li>
          <% if current_user.employer %>
            <li><%= link_to "New Job", new_job_path, class:"btn btn-ghost" %></li>
          <% end %>
          <% if !current_user.employer %>
            <li><img class="avatar" src= "https://kitt.lewagon.com/placeholder/users/<%= current_user.nickname %>"></li>
          <% else %>
            <li><img class="avatar" src= "<%= current_user.img_url %>"></li>
          <% end %>
          <%# class= "avatar"  %>
          <%# <li><%= link_to "My profile", current_user_path, class:"btn btn-ghost"</li>  %>
        <%else %>
          <li><%= link_to "Log in", new_user_session_path, class: "btn btn-ghost" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
