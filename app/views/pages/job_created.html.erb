
<div class="test">
    <div class="wrapper">
      <div class="student-card-show">
          <%= link_to image_tag(@job.img_url), class: "card-img-top" %>
        <!-- A div with card__details class to hold the details in the card  -->
          <div class="student-card__details">
            <h4><strong>Required skills: </strong></h4>
            <% @job.skills.each do |skill| %>
              <span class="tag"><%=skill.name%></span>
            <% end %>
            <div class="name">
              <%= @job.job_title%>
              <h4><%= @job.user.location%></h4>
            </div>
            <br>
            <h4><%= @job.job_description%></h4>
            <p><strong>Start at: </strong><%= @job.start_date%></p>
            <p><strong>End: </strong><%= @job.end_date%></p>
            <h5>â‚¬ <%= @job.remuneration%></h5>
        </div>
        </div>
      </div>
    </div>



    <div class="place-holder">
        <% @job.requests.each do |request| %>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal<%= @job.id %>">
              <p> <img class="avatar" src= "https://kitt.lewagon.com/placeholder/users/<%= request.user.nickname %>"> <%=request.user.name%> <%= request.user.location %> </p>

            </button>
            <div class="modal fade" id="exampleModal<%= @job.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <img class="avatar" src= "https://kitt.lewagon.com/placeholder/users/<%= request.user.nickname %>">
                    <p><%= request.user.name %></p>
                    <p><%= request.job.job_title %></p>
                    <p><%= request.job.job_description %></p>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Accept</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Decline</button>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
      </div>
    </div>
</div>
