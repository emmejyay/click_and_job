<div id="container">
  <div class="request-header">
    <h3>My Posted Jobs:</h3>
  </div>
  <% @jobs.each do |job| %>
    <div class="student-card-show">
      <%= link_to image_tag(job.img_url), job_path(job), class: "card-img-top" %>
      <div class="student-card__details">

          <div class="name">
            <%= job.job_title%>
            <h4><strong><%= job.user.location%></strong></h4>
            <h4><%= job.job_description%></h4>
              <p><strong>Start at: </strong><%= job.start_date%></p>
              <p><strong>End: </strong><%= job.end_date%></p>
            <h5><%= job.remuneration%>â‚¬</h5>
          </div>
      </div>
    </div>
  <% end %>
</div>
